{% extends 'base.html.twig' %}
{% block body %}
    <div class="flex h-full flex-row">
        <aside class="z-40 w-64 h-full transition-transform -translate-x-full sm:translate-x-0 "
               aria-label="Sidenav">
            <div class="overflow-y-auto py-5 px-3 h-full bg-white border-r border-gray-200 dark:bg-gray-800 dark:border-gray-700 rounded-r-lg">
                <ul class="space-y-2">
                    {% for key, grade in grades %}
                        <a href="{{ path('app_student_grade', {'subject': key }) }}"
                           class="flex items-center p-2 pl-11 w-full text-base font-normal text-gray-900 rounded-lg transition duration-75 group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">
                            {{ key }}
                        </a>
                    {% endfor %}
                </ul>
            </div>

        </aside>
        {% block subjectGrades %}
        {% endblock %}
    </div>

{% endblock %}