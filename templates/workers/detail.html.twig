{% block details %}
    <turbo-frame id="teacher-details">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold text-gray-800 dark:text-white">
                {{ teacher.authUser.firstName }} {{ teacher.authUser.lastName }}
            </h2>
            <p class="mt-2 text-gray-600 dark:text-gray-300">
                <span class="font-semibold text-gray-800 dark:text-white">Email:</span> {{ teacher.authUser.email }}
            </p>
            <p class="mt-2 text-gray-600 dark:text-gray-300">
                <span class="font-semibold text-gray-800 dark:text-white">Phone Number:</span> {{ teacher.authUser.phoneNumber }}
            </p>
            <p class="mt-2 text-gray-600 dark:text-gray-300">
                <span class="font-semibold text-gray-800 dark:text-white">Address:</span> {{ teacher.authUser.address }}
            </p>
            <p class="mt-2 text-gray-600 dark:text-gray-300">
                <span class="font-semibold text-gray-800 dark:text-white">Date of Birth:</span> {{ teacher.authUser.dateOfBirth|format_date('long') }}
            </p>
        </div>
    </turbo-frame>
{% endblock %}
